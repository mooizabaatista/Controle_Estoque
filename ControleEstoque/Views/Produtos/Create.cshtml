@model Produto


<div class="row bg-secondary text-center py-3 mt-4 mb-3 text-light">
    <div class="col-12">
        <h2>Cadastro de Produto</h2>
    </div>
</div>


@if (ViewBag.Error == true)
{
    <div class="row my-3 text-center">
        <div class="col-12">
            <div class="alert alert-danger">
                <h5>Atenção, o produto informado já está cadastrado...</h5>
            </div>
        </div>
    </div>
}


<form asp-action="Create" asp-controller="Produtos" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>

    <div class="form-group my-3">
        <input type="submit" value="Cadastrar" class="btn btn-success" />
        <a asp-action="Index" asp-controller="Produtos" class="btn btn-primary">Voltar</a>
    </div>
</form>