@model Movimentacao


<div class="row bg-secondary text-center py-3 mt-4 mb-3 text-light">
    <div class="col-12">
        <h2>Cadastro de Movimentação</h2>
    </div>
</div>


@if (ViewBag.Error == true)
{
    <div class="row my-3 text-center">
        <div class="col-12">
            <div class="alert alert-danger">
                <h5>Atenção, não é possivel retirar mais itens do que existem no estoque...</h5>
            </div>
        </div>
    </div>
}



<form asp-action="Create" asp-controller="Movimentacoes" method="post">

    <div class="row">
        <div class="col-12 col-md-3">
            <div class="form-group">
                <label>Produto</label>
                <select class="form-control" asp-items="ViewBag.Produtos" asp-for="ProdutoId" required>
                    <option value="">Selecione um produto</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label>Frente de Serviço</label>
                <select class="form-control" asp-items="ViewBag.FrenteServicos" asp-for="FrenteServicoId" required>
                    <option value="">Selecione uma frente de serviço</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label>Data</label>
                <input type="Date" asp-for="Data" class="form-control" required />
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label>Tipo de Movimentação</label>
                <select asp-for="TipoMovimentacao" class="form-control" required>
                    <option value="">Selecione...</option>
                    <option>Entrada</option>
                    <option>Saída</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label>Quantidade</label>
                <input asp-for="Quantidade" class="form-control" required />
            </div>
        </div>
    </div>




    <div class="form-group my-3">
        <input type="submit" value="Cadastrar" class="btn btn-success" />
        <a asp-action="Index" asp-controller="Movimentacoes" class="btn btn-primary">Voltar</a>
    </div>
</form>